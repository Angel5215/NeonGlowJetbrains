<idea-plugin>
    <id>com.github.angel5215.neonglowjetbrains</id>
    <name>NeonGlowJetbrains</name>
    <vendor>angel5215</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.angel5215.neonglowjetbrains.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.angel5215.neonglowjetbrains.startup.MyProjectActivity" />
    </extensions>
</idea-plugin>
